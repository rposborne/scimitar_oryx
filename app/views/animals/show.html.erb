<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= @animal.name %>
      <small>a <%=@animal.species.name%> from <%= @animal.facility.name %></small>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <%= image_tag @animal.pictures.first.image.url(:portfolio_large), class: "img-responsive" if @animal.pictures.first.present? %>
    <div>
    <h1> Close by Matches </h1>
    <table>
    <thead>
      <th>Name</th>
      <th>Age</th>
      <th>Facility Name</th>
    </thead>
    <tbody>
    <% @nearby_animals.each do |n| %>
      <tr>
        <td> <%= link_to n.name, animal_path(n.id)%> </td>
        <td><%=n.age%></td>
        <td><%=n.facility.name %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
    </div>
  </div>
  <div class="col-md-4">
    <h3>Description</h3>
    <p>
      Date of Birth: <%= @animal.date_of_birth %>
      <br/>
      Studbook: <%= @animal.studbook %>
      <br/>
      Sire: <%= @animal.sire %>
      <br/>
      Dam: <%= @animal.dam %>
      <br/>
      Tag: <%= @animal.tag %>
      <br/>
      Comments: <%= @animal.comments %>
      <br/>
      Searchable: <%= @animal.searchable %>
    </p>

    <h3>Actions</h3>
    <p>
      <% if current_user.site_admin? || FacilityUser.find_by(user_id: current_user.id).facility_id === @animal.facility_id%>
        <%= link_to 'Edit', edit_animal_path(@animal) %> |
      <% end %>
      <%= link_to 'Back', animals_path %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header">More Images</h3>
  </div>
  <% @animal.pictures.each do |p| %>
    <div class="col-sm-3 col-xs-6">
      <%= image_tag p.image.url(:portfolio_small), class: "img-responsive" %>
    </div>
  <% end %>
</div>
